<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="login">
    <select id="getUserbyid" parameterType="int" resultType="com.jiopeel.bean.User">
        select * from t_user where  t_user.id=#{_paramer}
    </select>

    <insert id="saveuserGrant" parameterType="com.jiopeel.bean.UserGrant">
        insert into t_user_grant(id,userid,granttype,onlyid,password,imgurl,nickname,ctime,updtime)
         values (#{id},#{userid},#{granttype},#{onlyid},#{password},#{imgurl},#{nickname},#{ctime},#{updtime})
    </insert>

    <update id="upduserGrant" parameterType="com.jiopeel.bean.UserGrant">
        update t_user_grant
        set password=#{password},
        imgurl=#{imgurl},
        nickname=#{nickname}
        where
        1=1
        and id=#{id}
    </update>

    <select id="getuserGrant" parameterType="com.jiopeel.bean.UserGrant" resultType="com.jiopeel.bean.UserGrant">
        select * from t_user_grant
        where  t_user_grant.onlyid=#{onlyid}
        and t_user_grant.granttype=#{granttype}
    </select>

    <insert id="saveUser" parameterType="com.jiopeel.bean.User">
        insert into t_user(id,username,email,ctime,updtime,account,password)
         values (#{id},#{username},#{email},#{ctime},#{updtime},#{account},#{password})
    </insert>

    <select id="checkusername" parameterType="com.jiopeel.bean.User" resultType="int">
        select count(1) from t_user
        where  t_user.account=#{account}
    </select>

    <select id="getUserbyaccount" parameterType="com.jiopeel.bean.User" resultType="com.jiopeel.bean.User">
        select * from t_user
        where  t_user.account=#{account}
    </select>

    <select id="checklogin" parameterType="com.jiopeel.bean.User" resultType="com.jiopeel.bean.User">
        select t_user.* from t_user
        where 1=1 and t_user.account=#{account}
        and  t_user.password=#{password}
    </select>
</mapper>