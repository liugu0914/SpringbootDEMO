<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="app">
    <select id="get" parameterType="String" resultType="com.jiopeel.sys.bean.App">
        select * from t_app where id=#{_paramer}
    </select>

    <select id="getInfo" parameterType="String" resultType="com.jiopeel.sys.bean.result.AppResult">
        select * from t_app where id=#{_paramer}
    </select>

    <select id="getList" parameterType="com.jiopeel.sys.bean.query.AppQuery" resultType="com.jiopeel.sys.bean.result.AppResult">
         select * from t_app where 1=1
    </select>

    <select id="list" parameterType="com.jiopeel.sys.bean.query.AppQuery" resultType="com.jiopeel.sys.bean.result.AppResult">
         select * from t_app where 1=1
    </select>

    <update id="upduserGrant" parameterType="com.jiopeel.core.bean.UserGrant">
        update t_user_grant
        set token=#{token},
        imgurl=#{imgurl},
        nickname=#{nickname},
        updtime=#{updtime}
        where 1=1
        and id=#{id}
    </update>
</mapper>